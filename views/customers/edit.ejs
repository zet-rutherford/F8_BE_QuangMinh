<h1>Sửa thông tin khách hàng</h1>
<% if(msgEdit?.length){ %>
    <div class="alert alert-success"><%= msgEdit %></div>
<%}%>
<% if(msg?.length){ %>
    <div class="alert alert-danger"><%= msg %></div>
<%}%>
<% if(err?.length){ %>
    <div class="alert alert-danger"><%= err %></div>
<%}%>
<form action="" onsubmit="return confirm('Bạn có chắc chắn?')"  method="post">
  
    <div class="mb-3">
        <label for="">Tên</label>
        <input type="text" name="name" value="<%= customer.name %>" placeholder="Tên..." class="form-control"/>
        <span class="text-danger"><%= validate.getError(errors, "name") %></span>
    </div>
 
    <div class="mb-3">
        <label for="">Email</label>
        <input type="text" name="email" value="<%= customer.email %>" placeholder="Email..." class="form-control"/>
        <span class="text-danger"><%= validate.getError(errors, "email") %></span>
        <% if(emailIdentical?.length){ %>
            <span class="text-danger"><%= emailIdentical %></span>
        <%}%>
    </div>
    <div class="mb-3">
        <label for="">Trạng thái</label>
        <select name="status" class="form-select">
       
            <option value=<%= +customer.status %>><%= customer.status?"Kích hoạt":"Chưa kích hoạt" %></option>
            <option value=<%= +!customer.status %>><%= !customer.status?"Kích hoạt":"Chưa kích hoạt" %></option>
        </select>
    </div>
  
    <button class="btn btn-success">Lưu</button>
    <a href="/customers" class="btn btn-danger">Hủy</a>
</form>